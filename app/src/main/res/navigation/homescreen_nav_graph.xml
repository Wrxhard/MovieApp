<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homescreen_nav_graph"
    android:label="@string/film_poster"
    app:startDestination="@id/homescreen">

    <fragment
        android:id="@+id/homescreen"
        android:name="tdtu.movieapp.app.ui.View.HomeScreen"
        android:label="homescreen"
        tools:layout="@layout/homescreen">
        <action
            android:id="@+id/action_homescreen_to_detail_screen"
            app:destination="@id/detailscreen" />
        <action
            android:id="@+id/action_homescreen_to_searchScreen"
            app:destination="@id/searchScreen" />
    </fragment>
    <fragment
        android:id="@+id/detailscreen"
        android:name="tdtu.movieapp.app.ui.View.DetailScreen"
        android:label="detail_screen"
        tools:layout="@layout/detailscreen" >
        <argument
            android:name="Poster"
            app:argType="string" />
        <action
            android:id="@+id/action_detailscreen_to_homescreen"
            app:destination="@id/homescreen"
            app:popUpTo="@id/homescreen"
            app:popUpToInclusive="true" />
        <argument
            android:name="detailCategory"
            app:argType="string[]" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="overview"
            app:argType="string" />
        <argument
            android:name="score"
            app:argType="float" />
        <argument
            android:name="video_url"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/searchScreen"
        android:name="tdtu.movieapp.app.ui.View.SearchScreen"
        android:label="SearchScreen" >
        <argument
            android:name="query"
            app:argType="string" />
        <action
            android:id="@+id/action_searchScreen_to_detailscreen"
            app:destination="@id/detailscreen" />
    </fragment>

</navigation>