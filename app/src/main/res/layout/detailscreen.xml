<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.View.Frag3">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_340sdp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/film_poster"
            android:scaleType="fitXY"
            android:src="@drawable/movieholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/backtomain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_28sdp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:textSize="@dimen/_40sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_32sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/bookmarks_white_24dp"
            android:textSize="@dimen/_40sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        <androidx.cardview.widget.CardView
            android:id="@+id/score"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:backgroundTint="#F9CD33"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="@dimen/_25sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_30sdp"
                android:textAlignment="center"
                android:gravity="center"
                android:text="IMDB 6.8"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_13ssp"
                />

        </androidx.cardview.widget.CardView>
        <ImageView
            android:id="@+id/star"
            android:layout_marginTop="@dimen/_22sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/star"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toEndOf="@id/score"
            android:layout_marginStart="@dimen/_12sdp"
            android:src="@drawable/grade">
        </ImageView>
        <TextView
            android:id="@+id/ViewerScore"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_6sdp"
            app:layout_constraintStart_toEndOf="@id/star"
            android:textAlignment="center"
            android:text="4.8"
            android:textColor="#F9CD33"
            android:textSize="@dimen/_18ssp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="(110k reviews)"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintTop_toTopOf="@id/ViewerScore"
            app:layout_constraintStart_toEndOf="@id/ViewerScore">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
</layout>